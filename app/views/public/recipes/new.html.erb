<h3 class="text-center mt-5">画像投稿フォーム</h3>
<div class="container center-block pl-5">
  <div class="row offset-4 text-center">
    <%= form_with model: @recipe do |f| %>
      <h4 class="mt-3">タイトル</h4>
        <%= f.text_field :title %>
      <h4 class="mt-3">レシピ詳細</h4>
        <%= f.text_area :detail %>
      <h4 class="mt-3">画像</h4>
        <%= f.file_field :image, accept: "image/*" %><br><br>
      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>