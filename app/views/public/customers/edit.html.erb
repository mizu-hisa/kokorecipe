<h2 class="text-center">プロフィール編集</h2>

<div class="container">
    <div class="row">
      
      <div class="col">
        <%= form_with model: @customer do |f| %>
          <label for="inputName">Name</label>
          <%= f.text_field :user_name, autofocus: true, id:"inputName", placeholder:"名前"%>
      <div class="col">
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="col">
          <%= f.submit "変更を保存" %>
      </div>
      <div class="col">
          <%= link_to '退会する', customers_is_deleted_path, class: "btn btn-danger btn-sm ml-5 mt-3" %>
        <% end %>
      </div>
    </div>
</div>